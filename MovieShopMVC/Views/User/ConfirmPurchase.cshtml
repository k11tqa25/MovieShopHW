@model ApplicationCore.Models.PurchaseResponseModel 

@{
    ViewData["Title"] = "Confirm Purchase";
}

<div class="d-flex justify-content-center align-items-center flex-column">
    <h1>Purchase Result: Confirmed</h1>

    <section class="card w-25 shadow bg-light p-3">
        <div class="row">
            <h5 class="col-5">User</h5>
            <h5 class="col-7">@Model.UserName</h5>
        </div>
        <div class="row">
            <h5 class="col-5">Purchased Movie</h5>
            <h5 class="col-7">@Model.MovieTitle</h5>
        </div>
        <div class="row">
            <h5 class="col-5">Price</h5>
            <h5 class="col-7">@Model.Price</h5>
        </div>
        <small>@Model.PurchaseDate</small>
    </section>
</div>